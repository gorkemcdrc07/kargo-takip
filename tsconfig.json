{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["react", "react-dom", "vite/client"]
  },
  "include": ["src"]
}
